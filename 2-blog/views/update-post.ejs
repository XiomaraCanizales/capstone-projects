<%- include('partials/header') %>

<h1 class="mt-4">Edit Post</h1>
<p>Edit your post here:</p>

<form action="/update-post?_method=PATCH" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" readonly value="<%= post.title %>">
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea class="form-control" id="content" name="content" rows="5" required><%= post.content %></textarea>
    </div>
    <a href="/" class="btn btn-cancel">Cancel</a>
    <button type="submit" class="btn btn-dark">Edit Post</button>
</form>

<%- include('partials/footer') %>