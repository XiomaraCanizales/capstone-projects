<%- include('partials/header') %>

<h1 class="mt-4">All Posts</h1>
<p>Here you can see all the posts:</p>

<ul class="list-group">
    <% posts.forEach(post => { %>
        <li class="list-group-item">
            <h5><%= post.title %></h5>
            <p><%= post.content %></p>
            <!-- update button -->
            <a href="/update-post/<%= post.title %>" class="btn btn-warning">Edit</a>

            <!-- delete button -->
            <form action="/delete-post/<%= post.title %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>

        </li>
    <% }) %>
</ul>

<%- include('partials/footer') %>